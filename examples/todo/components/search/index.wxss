.search {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    padding: 0 16rpx;
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    background-color: #778591;
    z-index: 998;
    color: #FFFFFF;
}

.search-bar {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.icon-wrapper {
    width: 80rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.icon-wrapper image {
    width: 60rpx;
    height: 60rpx;
}

.search-bar input {
    flex-grow: 1;
}

.clear-wrapper {
    width: 50rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.clear {
    width: 30rpx;
    height: 30rpx;
    background-color: #5E6972;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.clear image {
    width: 18rpx;
    height: 18rpx;
}

.cancel {
    width: 70rpx;
    text-align: left;
}

.guide{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 200rpx;
}

.guide image {
    width: 400rpx;
    height: 400rpx;
}

.todos {
    margin-top: 40rpx;
}
